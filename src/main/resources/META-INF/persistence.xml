<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="WAP_Final">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>domain.entities.Address</class>
        <class>domain.entities.Applicant</class>
        <class>domain.entities.ApplicationStatus</class>
        <class>domain.entities.Department</class>
        <class>domain.entities.Employee</class>
        <class>domain.entities.HumanResourcesOfficer</class>
        <class>domain.entities.JobApplication</class>
        <class>domain.entities.PerformanceReview</class>
        <class>domain.entities.Position</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/wapfinal"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hbm2ddl.auto" value="create"/>
            <property name="hibernate.hbm2ddl.auto" value="create" />

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
            <property name="javax.persistence.schema-generation.create-source" value="metadata" />
            <property name="javax.persistence.schema-generation.drop-source" value="metadata" />
        </properties>
    </persistence-unit>
</persistence>
